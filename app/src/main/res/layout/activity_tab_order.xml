<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.tabneworder.TabOrderActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.KAV.AppBarOverlay">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:id="@+id/toolbar"

            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginVertical="10dp"
                app:startIconTint="@color/black"
                android:id="@+id/etSearch"
                app:expandedHintEnabled="true"
                app:boxCornerRadiusTopStart="16dp"
                android:layoutDirection="rtl"
                app:endIconMode="custom"
                android:visibility="gone"
                app:hintTextColor="@color/black"
                android:hint="חפש מוצר או מק״ט"
                android:textColorHint="@color/hint_color"
                app:startIconDrawable="@drawable/back_arrrow"
                app:boxCornerRadiusTopEnd="16dp"
                app:suffixText="נקה"
                app:suffixTextColor="@color/hint_color"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/light_blue"
                    android:textColor="@color/black"


                    android:fontFamily="@font/roboto_regular"
                    android:textCursorDrawable="@null"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:id="@+id/tbLayout"
                android:gravity="center_vertical"
                android:backgroundTint="@color/purple_500"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="12dp"
                        android:contentDescription="@string/order_item_text_t1"
                        android:src="@drawable/back_arrrow"

                        />

                    <TextView
                        android:id="@+id/title"
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/btnBack"

                        android:text="הזמנה חדשה"
                        android:textSize="22sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_toLeftOf="@id/btnBack"
                        android:fontFamily="@font/roboto_regular"
                        android:text="שופרסל"

                        android:textSize="14sp"

                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1.5"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting"
                        android:contentDescription="@string/order_item_text_t1"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:contentDescription="@string/order_item_text_t1"
                        android:src="@drawable/share"
                        />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search"
                        android:id="@+id/btnSearch"

                        android:contentDescription="@string/order_item_text_t1"
                        app:tint="@color/black" />

                </LinearLayout>




            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"


                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/btnBack"
                    android:text="יום שלישי 25/03/22"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_toLeftOf="@id/btnBack"
                    android:fontFamily="@font/roboto_regular"
                    android:text="שופרסל"
                   android:textColor="@color/hint_color"
                    android:textSize="14sp"

                    />




            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?actionBarItemBackground"
                android:src="@drawable/calendar" />



        </RelativeLayout>



        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextAppearance="@style/customfontstyle"
            app:tabMode="scrollable"
            android:backgroundTint="@color/purple_500"
            app:tabGravity="fill"
            android:layoutDirection="ltr"
            android:animateLayoutChanges="true"
            app:tabTextColor="@color/hint_color"
            android:isScrollContainer="true"

            app:tabIndicatorGravity="stretch"
            app:tabIndicatorAnimationMode="fade"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>