<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@drawable/summary_dialog_backg"
    tools:context=".ui.dialogs.SummaryDialogFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClose"
            android:src="@drawable/icon_button"
            android:background="?attr/selectableItemBackgroundBorderless"


            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center_vertical"
            style="@style/TextStyle"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="נכשל, לא הצליח להנפיק"
            />



    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="12dp"

        android:layout_alignParentEnd="true"
        android:backgroundTint="#FFDAD6"
        android:textColor="#410002"
        android:fontFamily="@font/roboto_medium"

        android:elevation="0dp"
        android:layoutDirection="rtl"
        android:paddingVertical="12dp"
        android:text="הנפק ללא אינטרנט"
        app:cornerRadius="100dp"
        app:elevation="0dp"

        />

</LinearLayout>